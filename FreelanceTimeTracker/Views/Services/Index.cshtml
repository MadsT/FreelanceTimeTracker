@model IEnumerable<FreelanceTimeTracker.Models.Service>

@{
    ViewBag.Title = "My Services";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ServiceName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ServiceiD }) |
            @Html.ActionLink("Details", "Details", new { id=item.ServiceiD }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ServiceiD })
        </td>
    </tr>
}

</table>
